<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:scrollbarStyle="outsideOverlay"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:id="@+id/item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/card_home_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_thumbnail"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/sad_emoji">

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/linear_layout_card_to_view"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_of_the_event"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Nombre del evento" />

                    <TextView
                        android:id="@+id/type_of_the_event"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo del evento" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/date_of_the_event"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha del evento" />

                    <TextView
                        android:id="@+id/city_of_the_event"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Ciudad del evento"
                        android:textColor="@android:color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Btn_like_disklike"
                        android:text="Like" />



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>



</android.support.v7.widget.CardView>
